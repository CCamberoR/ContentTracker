# ContentTracker Environment Variables
# Copia este archivo como .env y ajusta los valores según tu configuración

# Configuración del servidor
PORT=5000
DEBUG=true
HOST=localhost

# Base de datos
DATABASE_URL=sqlite:///data/contenttracker.db

# API Keys (si es necesario)
# YOUTUBE_API_KEY=tu_api_key_aqui
# TWITTER_API_KEY=tu_api_key_aqui
# INSTAGRAM_API_KEY=tu_api_key_aqui

# Configuración de logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Configuración de análisis
ANALYTICS_ENABLED=true
EXPORT_ENABLED=true

# Configuración de Electron
ELECTRON_DEV_TOOLS=true
