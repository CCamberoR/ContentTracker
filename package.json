{
  "name": "content-tracker",
  "version": "1.0.0",
  "description": "Content tracking application with Python backend and Electron frontend",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "install-python": "uv pip install -r requirements.txt",
    "install-python-pip": "pip install -r requirements.txt",
    "backend": "python backend/main.py",
    "api": "python backend/api/server.py",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "echo \"No linting configured\" && exit 0",
    "clean": "rm -rf dist/ node_modules/.cache/",
    "setup": "npm install && npm run install-python"
  },
  "keywords": [
    "electron",
    "python",
    "content-tracker"
  ],
  "author": "Carlos Cambero",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "sqlite3": "^5.1.7"
  },
  "build": {
    "appId": "com.ccambero.contenttracker",
    "productName": "Content Tracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist"
    ]
  }
}
