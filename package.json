{
  "name": "content-tracker",
  "version": "1.0.0",
  "description": "Content tracking application with Python backend and Electron frontend",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "install-python": "pip install -r requirements.txt"
  },
  "keywords": [
    "electron",
    "python",
    "content-tracker"
  ],
  "author": "Carlos Cambero",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "build": {
    "appId": "com.ccambero.contenttracker",
    "productName": "Content Tracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist"
    ]
  }
}
